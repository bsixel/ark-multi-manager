{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    // "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    // "module": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2022",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "experimentalDecorators": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/.next",
    "**/out",
    "**/public",
    "**/dist",
    "**/build",
    "**/coverage",
    "../socket-server"
  ],
  "type": "module"
}
